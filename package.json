{
  "name": "bolt",
  "version": "1.3.1",
  "description": "Minimal blog theme based on Bolt.css",
  "author": "Hyas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gethyas/bolt.git"
  },
  "scripts": {
    "create": "hugo new",
    "dev": "hugo server --disableFastRender --noHTTPCache",
    "format": "prettier **/** -w -c",
    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@hyas/bolt-core": "^1.3.0",
    "@hyas/images": "^3.2.0",
    "@hyas/seo": "^2.3.0",
    "gethyas": "^2.4.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
